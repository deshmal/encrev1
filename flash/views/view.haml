!!!
%html
  %head
    %title evv1 : view
    %link(rel='icon' type='image/png' href='/favicon.png')
    %link(rel='stylesheet' type='text/css' href='history/history.css')
    %script(src='AC_OETags.js' language='javascript')
    %script(src='history/history.js' language='javascript')
    %style body { margin: 0px; overflow:hidden }
  %body
    %h1= "viewing stream #{params[:server]}/#{params[:room]}/#{params[:id]} (token: #{params[:token]})"
    #flash
      %noscript
        %object(classid='clsid:D27CDB6E-AE6D-11cf-96B8-444553540000' id='receive_video')
          %param
          %param(name='quality' value='high')
          %param(name='server' value="#{params[:server]}")
          %embed(src="receive_video.swf?streamtype=live&server=#{@full_url}&token=#{params[:token]}")

    :javascript
      AC_FL_RunContent(
      "src", "receive_video?stream=#{params[:id]}&streamtype=live&server=#{@full_url}&width=640&height=480&token=#{params[:token]}",
      "flashvars", "stream=#{params[:id]}&streamtype=live&server=#{@full_url}&width=640&height=480&token=#{params[:token]}",
      "width", "100%",
      "height", "100%",
      "align", "middle",
      "id", "receive_video",
      "quality", "75",
      "bgcolor", "#869ca7",
      "name", "receive_video",
      "type", "application/x-shockwave-flash",
      "pluginspage", "http://www.adobe.com/go/getflashplayer"
      );

